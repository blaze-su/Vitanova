mixin svgMix(svgClass, name)
	svg(class=svgClass)
		use(xlink:href='assets/img/sprite.svg#'+name)

mixin _btnConsult(text, center)
	- if (center)
		button.btnConsult.-center=text
	- else
		button.btnConsult=text

mixin subHeader(text, banner)
	- if (banner)
		.subHeader.-banner
			h2.subHeader__title= text
	- else
		.subHeader
			h2.subHeader__title= text

mixin banner(src, title, subtitle)
	.banner
		img(src= src, alt="").banner__image
		h1.banner__title= title
		span.banner__titleSub= subtitle

mixin sideMenu(array)
	.sideMenu
		each item in array
			a(href='#'+item.src).sideMenu__link= item.name

mixin sideShare(clr, text, time)
	.sideShare.share__info(class=clr)
		a(href="#").share__name= text
		.share__timeBox
			+svgMix('share__timeIcon','clock')
			.share__time= time

mixin sideDiscount(text, time)
	.sideDiscount.discount__info
		img.discount__image(src="assets/img/sideDiscount.png", alt="")
		a(href="#").discount__name= text
		.discount__timeBox
			+svgMix('share__timeIcon','clock')
			.discount__time= time