extends ../_template

block variables
    - var nomap = true

block content
  +subHeader("Акции")
  section.shares
    .container
      -
        var shares = [
          {clr: '-pink', name: 'Накопительная карта в подарок', src: 'assets/img/shares/1.png', time: 'до 14.мая 2016'},
          {clr: '-brown', name: 'Скидка для  студентов 15%  на эпиляцию', src: 'assets/img/shares/2.png', time: 'до 14.мая 2016'},
          {clr: '-yellow', name: 'Оптом в дешевле  скидка 5 ноготь  в подарок', src: 'assets/img/shares/3.png', time: 'до 14.мая 2016'},
          {clr: '-pink', name: 'Накопительная карта в подарок', src: 'assets/img/shares/1.png', time: 'до 14.мая 2016'},
          {clr: '-brown', name: 'Скидка для  студентов 15%  на эпиляцию', src: 'assets/img/shares/2.png', time: 'до 14.мая 2016'},
          {clr: '-yellow', name: 'Оптом в дешевле  скидка 5 ноготь  в подарок', src: 'assets/img/shares/3.png', time: 'до 14.мая 2016'},
          {clr: '-blue', name: 'Консультация  дермато- венеролога  БЕСПЛАТНО', src: 'assets/img/shares/4.png', time: 'до 14.мая 2016'}
        ]
      .shares__innercase
        each share in shares
          .share
            .share__innerbox
              img(src= share.src, alt="").share__image
            //- класс с цветом нужна возможность редактировать из админки
            .share__innerbox.share__info(class=share.clr)
              a(href="/some-service.html").share__name= share.name
              .share__timeBox
                +svgMix('share__timeIcon','clock')
                .share__time= share.time